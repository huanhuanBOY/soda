body, html {
    height: 100%;
    width: 100%;
    -webkit-tap-highlight-color: transparent;
    -webkit-text-size-adjust: none;
    -webkit-font-smoothing: antialiased;
    -webkit-user-select: none;
    user-select: none;
    font-family: PingFangSC,noto sans,Helvetica Neue,Helvetica,STHeiTi,sans-serif;
}
.viewport {
    position: relative;
    width: 100%;
    height: 100%;
}
.login {
    overflow: hidden;
    width: 100vw;
    height: 100vh;
    min-height: 500px;
}
.login .logo {
    width: 30%;
    margin: 20% 35% 5%;
    min-height: 100px;
}
.login .login-form {
    padding: 0 25px;
}

.login .login-form .row {
    position: relative;
}
.login .login-form .sms-btn {
    position: absolute;
    right: 20px;
    top: 5%;
    width: auto;
    height: 90%;
    color: #2b91f9;
    line-height: 90%;
    background-color: #fff;
    border: none;
    border-radius: 4px;
    margin: 0;
    outline: none!important;
}
.login .login-form .row.last {
    margin-top: 30px;
}

.form-control {
    display: block;
    width: 100%;
    height: 34px;
    padding: 6px 12px;
    font-size: 14px;
    float: left;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
    box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
    -webkit-transition: border-color ease-in-out 0.15s,box-shadow ease-in-out 0.15s;
    -o-transition: border-color ease-in-out 0.15s,box-shadow ease-in-out 0.15s;
    transition: border-color ease-in-out 0.15s,box-shadow ease-in-out 0.15s;
}
input, button, select, textarea {
    font-family: inherit;
    font-size: inherit;
    line-height: inherit;
}
.searchbar{
    margin-top: 5px;
    width: 100%;
    padding-left: 5%;
    padding-right: 5%;
    height: 40px;
    border-bottom: solid;
    border-bottom-width: 1px;
    border-bottom-color: #601986;
}
.cancel_search{
    width: 18%;
    text-align: center;
    float: right;
    padding: 8px 0px;
    font-size: 18px;
}